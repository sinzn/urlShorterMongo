<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>URL Shortener</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <h1>URL Shortener</h1>
    <form action="/shorten" method="POST">
      <input type="url" name="longUrl" placeholder="Enter long URL" required>
      <button type="submit">Shorten</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Original</th>
          <th>Short</th>
          <th>Hits</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach(url => { %>
          <tr>
            <td><%= url.longUrl %></td>
            <td><a href="/<%= url.shortId %>" target="_blank"><%= baseUrl + '/' + url.shortId %></a></td>
            <td><%= url.clicks %></td>
            <td>
              <button onclick="copyToClipboard('<%= baseUrl + '/' + url.shortId %>')">Copy</button>
              <form action="/delete/<%= url._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this link?')">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div id="notification" class="hidden">Link copied!</div>
  </div>
  <script src="/js/script.js"></script>
</body>
</html>
